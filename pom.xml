<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.bedework</groupId>
	<artifactId>bw-calendar-client</artifactId>
	<version>4.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>bw-calendar-client</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!-- Maven Plugin Versions -->
		<maven.compiler.plugin.version>2.3.2</maven.compiler.plugin.version>
		<maven.source.plugin.version>2.1.2</maven.source.plugin.version>
		<!-- Bedework Versions -->
		<bw-ws.version>4.0.0-SNAPSHOT</bw-ws.version>
		<bw-util.version>4.0.0-SNAPSHOT</bw-util.version>
		<bw-access.version>4.0.0-SNAPSHOT</bw-access.version>
		<bw-webdav.version>4.0.0-SNAPSHOT</bw-webdav.version>
		<bw-caldav-util.version>4.0.0-SNAPSHOT</bw-caldav-util.version>
		<bw-calendar-engine.version>4.0.0-SNAPSHOT</bw-calendar-engine.version>
		<!-- Third Party Library Versions -->
		<portlet-api.version>1.0</portlet-api.version>
		<jsp-api.version>2.3.1</jsp-api.version>
		<gson.version>1.5</gson.version>
		<portals-bridge.version>1.0.4</portals-bridge.version>
		<imgscalr.version>4.2</imgscalr.version>
		<struts.version>1.3.10</struts.version>
		<servlet-api.version>2.4</servlet-api.version>
		<junit.version>4.8.2</junit.version>
		<log4j.version>1.2.15</log4j.version>
	</properties>

	<organization>
		<name>Bedework</name>
		<url>https://github.com/Bedework</url>
	</organization>

	<licenses>
		<license>
			<name>Apache License Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:git@github.com:Bedework/bw-calendar-client.git</connection>
		<developerConnection>scm:git:git@github.com:Bedework/bw-calendar-client.git</developerConnection>
		<url>https://github.com/Bedework/bw-calendar-client</url>
	</scm>

	<issueManagement>
		<system>github</system>
		<url>https://github.com/Bedework/bw-calendar-client/issues</url>
	</issueManagement>

	<modules>
		<module>bw-calendar-client-appcommon</module>
    <module>bw-calendar-client-webcommon</module>
    <!--
		<module>bw-calendar-client-caladmin</module>
		<module>bw-calendar-client-cal</module>
		<module>bw-calendar-client-feeder</module>
		<module>bw-calendar-client-resources</module>
		<module>bw-calendar-client-submit</module>
		<module>bw-calendar-client-ucal</module>
		<module>bw-calendar-client-ucaldav</module>
		<module>bw-calendar-client-ucalws</module>
     -->
	</modules>

	<repositories>
		<repository>
			<id>jboss.repository</id>
			<name>JBoss Public Repository Group</name>
			<url>http://repository.jboss.org/nexus/content/groups/developer/</url>
			<layout>default</layout>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<!-- Only needed for JBoss 5 dependencies. We should remove this when we
			move Bedework off of JBoss 5. -->
		<repository>
			<id>jboss-deprecated</id>
			<name>JBoss Deprecated Repository</name>
			<url>http://repository.jboss.org/nexus/content/repositories/deprecated</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>bedework.repository</id>
			<name>Bedework Maven Repository</name>
			<url>http://dev.bedework.org/downloads/lib/repository/</url>
			<layout>default</layout>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<dependencyManagement>
		<dependencies>
			<!-- Bedework Project Dependencies -->
      <dependency>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-calendar</artifactId>
        <version>${bw-util.version}</version>
      </dependency>
      <dependency>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-config</artifactId>
        <version>${bw-util.version}</version>
      </dependency>
      <dependency>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-indexing</artifactId>
        <version>${bw-util.version}</version>
      </dependency>
      <dependency>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-json</artifactId>
        <version>${bw-util.version}</version>
      </dependency>
      <dependency>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-misc</artifactId>
        <version>${bw-util.version}</version>
      </dependency>
      <dependency>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-struts</artifactId>
        <version>${bw-util.version}</version>
      </dependency>
      <dependency>
        <groupId>org.bedework</groupId>
        <artifactId>bw-util-timezones</artifactId>
        <version>${bw-util.version}</version>
      </dependency>
			<dependency>
				<groupId>org.bedework</groupId>
				<artifactId>bw-access</artifactId>
				<version>${bw-access.version}</version>
			</dependency>
			<dependency>
				<groupId>org.bedework</groupId>
				<artifactId>bw-webdav</artifactId>
				<version>${bw-webdav.version}</version>
			</dependency>
			<dependency>
				<groupId>org.bedework</groupId>
				<artifactId>bw-caldav-util</artifactId>
				<version>${bw-caldav-util.version}</version>
			</dependency>
			<!-- Bedework: Web Services -->
			<dependency>
				<groupId>org.bedework</groupId>
				<artifactId>bw-ws-icalendar</artifactId>
				<version>${bw-ws.version}</version>
			</dependency>
			<dependency>
				<groupId>org.bedework</groupId>
				<artifactId>bw-ws-tzsvr</artifactId>
				<version>${bw-ws.version}</version>
			</dependency>
			<dependency>
				<groupId>org.bedework</groupId>
				<artifactId>bw-ws-calws-soap</artifactId>
				<version>${bw-ws.version}</version>
			</dependency>
			<!-- Bedework Calendar Engine -->
			<dependency>
				<groupId>org.bedework</groupId>
				<artifactId>bw-calendar-engine-facade</artifactId>
				<version>${bw-calendar-engine.version}</version>
			</dependency>
			<dependency>
				<groupId>org.bedework</groupId>
				<artifactId>bw-calendar-engine-api</artifactId>
				<version>${bw-calendar-engine.version}</version>
			</dependency>
			<dependency>
				<groupId>org.bedework</groupId>
				<artifactId>bw-calendar-engine-ical</artifactId>
				<version>${bw-calendar-engine.version}</version>
			</dependency>
			<dependency>
				<groupId>org.bedework</groupId>
				<artifactId>bw-calendar-engine-sysevents</artifactId>
				<version>${bw-calendar-engine.version}</version>
			</dependency>

			<!-- Third Party Libraries -->
			<dependency>
				<groupId>org.imgscalr</groupId>
				<artifactId>imgscalr-lib</artifactId>
				<version>${imgscalr.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.struts</groupId>
				<artifactId>struts-core</artifactId>
				<version>${struts.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.struts</groupId>
				<artifactId>struts-taglib</artifactId>
				<version>${struts.version}</version>
			</dependency>
			<dependency>
				<groupId>javax.portlet</groupId>
				<artifactId>portlet-api</artifactId>
				<version>${portlet-api.version}</version>
			</dependency>
			<dependency>
				<groupId>javax.servlet.jsp</groupId>
				<artifactId>javax.servlet.jsp-api</artifactId>
				<version>${jsp-api.version}</version>
			</dependency>
			<dependency>
				<groupId>com.google.code.gson</groupId>
				<artifactId>gson</artifactId>
				<version>${gson.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.portals.bridges</groupId>
				<artifactId>portals-bridges-common</artifactId>
				<version>${portals-bridge.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.portals.bridges</groupId>
				<artifactId>portals-bridges-struts-1.2.7</artifactId>
				<version>${portals-bridge.version}</version>
			</dependency>

			<dependency>
				<groupId>javax.servlet</groupId>
				<artifactId>servlet-api</artifactId>
				<version>${servlet-api.version}</version>
			</dependency>
			<dependency>
				<groupId>log4j</groupId>
				<artifactId>log4j</artifactId>
				<version>${log4j.version}</version>
				<exclusions>
					<exclusion>
						<artifactId>jmxtools</artifactId>
						<groupId>com.sun.jdmk</groupId>
					</exclusion>
					<exclusion>
						<artifactId>jmxri</artifactId>
						<groupId>com.sun.jmx</groupId>
					</exclusion>
					<exclusion>
						<artifactId>jms</artifactId>
						<groupId>javax.jms</groupId>
					</exclusion>
				</exclusions>
			</dependency>
			<!-- Test Dependencies -->
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>${junit.version}</version>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<!-- Specify the compiler options and settings -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.plugin.version}</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<showDeprecation>false</showDeprecation>
					<showWarnings>false</showWarnings>
				</configuration>
			</plugin>
			<!-- Produce source jars during the 'verify' phase -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>${maven.source.plugin.version}</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
