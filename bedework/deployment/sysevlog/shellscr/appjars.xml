<?xml version="1.0"?>

<!-- ===================================================================
     Fetch extra jars for this application
     =================================================================== -->
<project name="extraJars" basedir="." default="">
  <macrodef name="getExtraJars">
    <sequential>
      <delete dir="${org.bedework.temp.extrajars.dir}" />
      <mkdir dir="${org.bedework.temp.extrajars.dir}" />
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="bw-sysevents" version="${org.bedework.sysevents.version}"
              projecthome="${bw.project.home}/../bwsysevents" />
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="bw-interfaces" version="${org.bedework.interfaces.version}" 
              projecthome="${project.home}/../bwinterfaces" />

      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="rpiaccess" 
              version="${org.bedework.access.version}" project="access"
              projecthome="${bw.project.home}/../access" />

    </sequential>
 </macrodef>
</project>
